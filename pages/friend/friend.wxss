/* pages/friend/friend.wxss */
Page{
  background-color: #e2e2e2;
}
.item {
  width: 100%;
  height: 150rpx;
  
  position: relative;
  background: #fff;
  border-bottom:2px solid #e2e2e2; 
}

image {
  width: 100rpx;
  height: 100rpx;
  border: 1px solid #000;
  border-radius: 50%;
    position: absolute;
  left: 20rpx;
  top: 50%;
  margin-top: -50rpx;
 
}
.item text{
  position: absolute;
  left: 150rpx;
  height: 30rpx;
  line-height: 30rpx;
  top: 50%;
  margin-top: -15rpx;
  font-weight: bold;
  
}
.fight {
  position: absolute;
  right: 20rpx;
  height: 30rpx;
  line-height: 30rpx;
  top: 50%;
  margin-top: -15rpx;
  font-weight: bold;
}

.userinfo {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.item>image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 1px solid pink;
  margin: 10px auto;
  display: block;
}


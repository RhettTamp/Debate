  width: 300rpx;
}

.positive, .negative {
  display: block;
  width: 100rpx;
  margin: 10px auto;
  font-size: 24rpx;
  font-weight: bold;
  color: #000;
  text-align: center;
}

.rect_postive, .rect_negative {
  width: 60rpx;
  border: 1px solid #000;
  border-bottom: 0;
  position: fixed;
}

.rect_postive {
  left: 0rpx;
  bottom: 99rpx;
}

.rect_negative {
  right: 0rpx;
  bottom: 99rpx;
}

.rect_postive>text, .rect_negative>text {
  margin: -40rpx auto;
  display: block;
  text-align: center;
}

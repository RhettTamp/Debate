/**index.wxss**/

/* components/header/header.wxss */

/* 头部 */
Page{
  background: #3883FA;
}
.userinfo {
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 14px;
  border-bottom: 1rpx solid #ccc;
  border-left: 1rpx solid #ccc;
  border-right: 1rpx solid #ccc;
  border-radius: 20rpx;
  box-shadow: 0px 2rpx #e2e2e2;
  width: 90%;
  margin: 0 auto;
  background: peachpuff;
}

.userinfo-avatar {
  overflow: hidden;
  display: block;
  width: 80rpx;
  height: 80rpx;
  margin: 30rpx 20rpx 5rpx 20rpx;

  border-radius: 50%;
  border: 4px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.header {
  padding-left: 15rpx;
  padding-bottom: 5rpx;
  border-bottom: 1rpx solid #ccc;
  border-left: 1rpx solid #ccc;
  border-right: 1rpx solid #ccc;
  border-radius: 20rpx;
  box-shadow: 0px 2rpx #e2e2e2;
  z-index: 999;
  width: 90%;
  margin: 0 auto;
  position: relative;
}

.header>image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 2rpx solid #2dc799;
  text-align: center;
  display: block;
  position: absolute;
  top: 20rpx;
  left: 50%;
  margin-left: -60rpx;
}

.text {
  padding-top: 205rpx;
}

.text>text {
  /* display: block; */
  font-size: 36rpx;
  margin-right: 50rpx;
}

.userName {
  width: 120rpx;
  text-align: center;
  font-size: 36rpx;
  color: black;
  position: absolute;
  left: 50%;
  margin-left: -60rpx;
  top: 150rpx;
}

.coin {
  margin-left: 300rpx;
}

.item {
  width: 90%;
  border: 1px solid #ccc;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin: 40rpx auto;
}

.item text {
  margin-left: 40rpx;
  font-size: 30px;
}

.btn {
  width: 300rpx;
  height: 150rpx;
  border: 1px solid #ccc;
  text-align: center;
  line-height: 150rpx;
  margin-top: 30rpx;
}

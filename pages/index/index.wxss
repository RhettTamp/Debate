/* 头部 */
Page{
  background: #f5f6f7;
}
.header{
  height: 130rpx;
  background: #3883FA;
  width: 100%;
padding-top: 30rpx;

}
.container{
 margin-top: 130rpx;
  background: #f5f6f7;
}
.userinfo {
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 14px;
  
  border-bottom: 1rpx solid #B7D0ED;
  
  
  border-radius: 20rpx;
  box-shadow: 1px 3px 2px #B7D0ED;
  width: 90%;
  margin: 0rpx auto;

 background-image: url('https://lg-6wpqzwp0-1253820244.cos.ap-shanghai.myqcloud.com/timg.jpg');
 background-size: cover;
  padding-bottom: 20rpx;
}

.userinfo-avatar {
  overflow: hidden;
  display: block;
  width: 80rpx;
  height: 80rpx;
  margin: 30rpx 20rpx 5rpx 20rpx;
  border-radius: 50%;
  border: 4px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}
.rankInfo{
   width: 90%;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.rankInfo text{
color: #fff;
}
.item {
  width: 90%;
  border: 1px solid #ccc;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  margin: 0rpx auto;
  background: #fff;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
   border-radius: 20rpx;

}

.item text {

/* color: #3883FA; */
  font-size: 14px;
}


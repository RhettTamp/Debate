<view class='header'>


  <view class="userinfo">
    <view class="userinfo-avatar">
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <open-data type="userNickName"></open-data>

    <view class='rankInfo'>
      <view>孤独求败</view>
      <text>金币：0</text>
    </view>
  </view>


</view>


<view class="container">

  <view class='item'>
    <text bindtap='toRecommend'>推荐</text>
    <text>搜索</text>
